@model SRM.Models.tbClass
@using SRM.Utils
@{
    ViewBag.Title = "Create";
}
<style type="text/css">
    .k-textbox {
        width: 100%;
    }
     
</style>
@{
    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        SingletonObject.crumbAdminLte_Index(Url),
        SingletonObject.crumbClass_Index(Url),
        SingletonObject.crumbStudent_Create(Url)
    });
}
<div class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.TitleSmall</small>
    </h1>
    @Html.Partial("_AdminLteBreadcrumb")
</div>
<section class="content">
    @using (Ajax.BeginForm("Create", "Classes", SingletonObject._ajaxOption(null, true)))
         {
             @Html.AntiForgeryToken()
             <div class="box box-success">
                 <div class="box-header with-border">
                     <h3 class="box-title">Primary Information</h3>
                     <div class="box-tools pull-right">
                         <button class="btn btn-box-tool" data-widget="collapse">
                             <i class="fa fa-minus"></i>
                         </button>
                         <button class="btn btn-box-tool" data-widget="remove">
                             <i class="fa fa-times"></i>
                         </button>
                     </div>
                 </div><!-- /.box-header -->
                 <div class="box-body no-padding">
                     <div class="row">
                         <div class="col-md-12 col-sm-12" style="padding-top: 20px">

                         </div>
                     </div>
                     <div class="form-horizontal">
                         <div class="form-group row">
                             <div class="col-md-12 col-sm-12">
                                 @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                 <div class="col-md-6 col-sm-6">
                                     <div class="col-md-3 col-sm-3">
                                         @Html.Label("", "Code", new {@class = "pull-right"})
                                     </div>
                                     <div class="col-md-9 col-sm-9">
                                         @Html.Kendo().TextBoxFor(m => m.code)
                                     </div>
                                     @Html.ValidationMessageFor(m => m.code)
                                 </div>
                                 <div class="col-md-6 col-sm-6">
                                     <div class="col-md-3 col-sm-3">
                                         @Html.LabelFor(m => m.Name, new {@class = "pull-right"})
                                     </div>
                                     <div class="col-md-9 col-sm-9">
                                         @Html.Kendo().TextBoxFor(m => m.Name)
                                     </div>
                                     @Html.ValidationMessageFor(m => m.Name)
                                 </div>
                             </div>
                         </div>
                         <div class="form-group row">
                             <div class="col-md-12 col-sm-12">
                                 @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                 <div class="col-md-6 col-sm-6">
                                     <div class="col-md-3 col-sm-3">
                                         @Html.LabelFor(m => m.Capacity, htmlAttributes: new {@class = "pull-right"})
                                     </div>
                                     <div class="col-md-9 col-sm-9">
                                         @Html.Kendo().NumericTextBoxFor(m => m.Capacity).HtmlAttributes(new {style = ""})
                                     </div>
                                     @Html.ValidationMessageFor(m => m.Capacity)
                                 </div>
                                 <div class="col-md-6 col-sm-6">
                                     <div class="col-md-3 col-sm-3">
                                         @Html.LabelFor(m => m.Status, htmlAttributes: new {@class = "pull-right"})
                                     </div>
                                     <div class="col-md-9 col-sm-9">
                                         @Html.Kendo().TextBoxFor(m => m.Status)
                                     </div>
                                     @Html.ValidationMessageFor(m => m.Status)
                                 </div>
                             </div>
                         </div>
                         <div class="form-group row">
                             <div class="col-md-12 col-sm-12">
                                 <div class="col-md-6 col-sm-6">
                                     <div class="col-md-3 col-sm-3">
                                         @Html.LabelFor(m => m.Location, htmlAttributes: new {@class = "pull-right"})
                                     </div>
                                     <div class="col-md-9 col-sm-9">
                                         @Html.Kendo().TextBoxFor(m => m.Location)
                                     </div>
                                     @Html.ValidationMessageFor(m => m.Location)
                                 </div>
                             </div>
                         </div>
                         <div class="form-group row">
                             <div class="col-md-12 col-sm-12">
                                 @Html.Kendo().EditorFor(m => m.Notes)
                             </div>
                         </div>
                     </div>
                 </div>
                 <div class="box-footer">
                     <div class="panel-footer">
                         @Ajax.ActionLink("Back", "Index", null, SingletonObject._ajaxOption(), new {@class = "btn btn-danger"})
                         <input type="submit" id="btnSubmit" value="Create" class="btn btn-success"/>
                     </div>
                 </div>
             </div>
         }
</section>
